<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary_list_bg"
    android:gravity="top|center"
    android:orientation="vertical"
    android:id="@+id/ll_parent">

    <include
        layout="@layout/frame_stats"
        android:id="@+id/stats_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/btn_color"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textSize="12sp"
        android:textColor="@color/tv_heading"
        android:textStyle="bold"
        android:text="customer name or phone number"
        android:id="@+id/tv_dashboard_customer_id"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/tv_heading"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/et_dashboard_customer_id"/>

</LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/tv_heading"
        android:textSize="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/btn_color"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textSize="12sp"
                android:textColor="@color/tv_heading"
                android:textStyle="bold"
                android:text="enter order number" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/tv_heading"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/et_order_number"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or"
        android:textColor="@color/tv_heading"
        android:layout_marginTop="25dp"
        android:textSize="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/btn_color"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:textSize="12sp"
                android:textColor="@color/tv_heading"
                android:textStyle="bold"
                android:text="scan order qr code"
               />


          <ImageButton
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:src="@drawable/ic_qr_code_scanner"
              android:id="@+id/ib_dashboard_scan_qr"
              android:scaleType="fitCenter"
              android:padding="15dp"
              android:scaleX="2"
              android:scaleY="2"
              android:background="@android:color/transparent"
              app:tint="@color/text_color" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="proceed"
        android:textColor="@color/tv_heading"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_main"
        android:id="@+id/btn_dashboard_proceed"/>

</LinearLayout>